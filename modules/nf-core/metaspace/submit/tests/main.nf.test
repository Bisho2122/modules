nextflow_process {

    name "Test Process METASPACE_SUBMIT"
    script "../main.nf"
    process "METASPACE_SUBMIT"
    config "./nextflow.config"

    tag "modules"
    tag "modules_nfcore"
    tag "metaspace"
    tag "metaspace/submit"

    test("metaspace_submit_test") {

        when {
            process {
                """
                input[0] = file('${projectDir}/test_data/test.imzML')
                input[1] = file('${projectDir}/test_data/test.ibd')
                input[2] = file('${projectDir}/test_data/ds_config.yml')
                """
            }
        }

        then {
            assertAll(
                { assert process.success }
            )
        }
    }
    test("metaspace_submit - stub") {

        options '-stub'
        when {
            process {
                """
                input[0] = file('${projectDir}/test_data/test.imzML')
                input[1] = file('${projectDir}/test_data/test.ibd')
                input[2] = file('${projectDir}/test_data/ds_config.yml')
                """
            }
        }
        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}
